export PATH=$PATH:./node_modules/.bin
export PATH=$PATH:$HOME/.yarn/bin
export PATH=$PATH:$HOME/bin
export PATH=$PATH:$HOME/Developer/wpcs/vendor/bin
export PATH=$PATH:$HOME/opt/bin
export PATH=$PATH:/Applications/Genymotion.app/Contents/MacOS/tools

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
function automaticNvm() {
    if [ -f `pwd`'/.nvmrc' ]; then nvm use; fi
}
function checkForNvmOnCd() {
  cd $1
  automaticNvm
}
automaticNvm

function yarnInstall() {
    echo "Uninstalling yarn..."
    rm -f /usr/local/bin/yarnpkg
    rm -f /usr/local/bin/yarn

    echo "Removing yarn cache..."
    rm -rf ${HOME}/.yarn

    echo "Installing yarn..."
    curl -o- -L https://yarnpkg.com/install.sh | bash -s -- --version $1
}

alias cd=checkForNvmOnCd
alias flush="sudo dscacheutil -flushcache;sudo killall -HUP mDNSResponder;"
alias j="jekyll serve --watch"
alias ls="ls -A"
alias mkdir="mkdir -p"
alias npmc="npm-check --no-emoji"
alias npmr="rm -rf node_modules && npm i"
alias npms="rm -rf npm-shrinkwrap.json && npmr && npm test && npm shrinkwrap --dev"
alias server="python -m SimpleHTTPServer 8000"
alias showallon="defaults write com.apple.finder AppleShowAllFiles YES"
alias showalloff="defaults write com.apple.finder AppleShowAllFiles NO"
alias usebash="chsh -s /bin/bash"
alias usezsh="chsh -s /bin/zsh"
alias yarni=yarnInstall
alias yarnr="rm -rf node_modules && yarn"
